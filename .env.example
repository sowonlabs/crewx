# CrewX Timeout Configuration
# All timeout values are in milliseconds (ms)

# Claude Provider Timeouts
# Query mode: Read-only analysis and responses
CREWX_TIMEOUT_CLAUDE_QUERY=600000       # 10 minutes (default)
# Execute mode: File modifications and implementations
CREWX_TIMEOUT_CLAUDE_EXECUTE=45000      # 45 seconds (default)

# Gemini Provider Timeouts
# Query mode: Read-only analysis and responses
CREWX_TIMEOUT_GEMINI_QUERY=600000       # 10 minutes (default)
# Execute mode: File modifications and implementations
CREWX_TIMEOUT_GEMINI_EXECUTE=1200000    # 20 minutes (default)

# Copilot Provider Timeouts
# Query mode: Read-only analysis and responses
CREWX_TIMEOUT_COPILOT_QUERY=600000      # 10 minutes (default)
# Execute mode: File modifications and implementations
CREWX_TIMEOUT_COPILOT_EXECUTE=1200000   # 20 minutes (default)

# Parallel Processing Timeout
# Timeout for parallel agent execution
CREWX_TIMEOUT_PARALLEL=300000           # 5 minutes (default)

# STDIN Timeouts
# Initial timeout: If no data arrives within this time, assume no piped input
CREWX_TIMEOUT_STDIN_INITIAL=30000       # 30 seconds (default)
# Chunk timeout: Max wait time between data chunks during streaming
CREWX_TIMEOUT_STDIN_CHUNK=600000        # 10 minutes (default)
# Complete timeout: Wait time after detecting completion marker
CREWX_TIMEOUT_STDIN_COMPLETE=100        # 100 ms (default)

# Notes:
# - All values must be positive integers in milliseconds
# - Smaller timeouts may cause premature termination of long-running tasks
# - Larger timeouts may cause the system to wait longer before detecting failures
# - If not specified, default values will be used

# CrewX Log Output Configuration
# Controls truncation limits for various log outputs (in characters)

# Maximum length for prompt content in logs
# Longer prompts will be truncated with '...[truncated]' marker
CREWX_LOG_PROMPT_MAX_LENGTH=10000           # 10,000 characters (default)

# Maximum length for tool result output in logs
# Longer results will be truncated with '...' marker
CREWX_LOG_TOOL_RESULT_MAX_LENGTH=2000       # 2,000 characters (default)

# Maximum length for conversation history in logs
# Longer conversations will be truncated
CREWX_LOG_CONVERSATION_MAX_LENGTH=4000      # 4,000 characters (default)

# Notes:
# - All values must be positive integers in characters
# - Smaller limits reduce log file size but may hide important details
# - Larger limits provide more context but increase log file size
# - Useful for debugging: set to higher values (e.g., 50000) to see full content
# - If not specified, default values will be used
